<h1>Event Data for <%= event.title %></h1>
<table>
  <tr>
    <th>Title</th>
    <td><%= event.title %></td>
  </tr>
  <tr>
    <th>Description</th>
    <td><%= event.description %></td>
  </tr>
  <tr>
    <th>Location</th>
    <td><%= event.location %></td>
  </tr>
  <tr>
    <th>Start Date</th>
    <td><%= event.startDate.toISOString().substring(0,10) %></td>
  </tr>
  <tr>
    <th>End Date</th>
    <td><%= event.endDate.toISOString().substring(0,10) %></td>
  </tr>

  <tr>
    <th>isOnline</th>
    <td><%= event.isOnline %></td>
  </tr>
  <tr>
    <th>registrationLink</th>
    <td><%= event.registrationLink %></td>
  </tr>
  <tr>
    <th>Organizer</th>
    <td><%= event.organizer.name %></td>
  </tr>
  <tr>
    <th>Attendees</th>
    <td>
      <% event.attendees.forEach(function(attendee) { %>
        <%= attendee.name %><br>
      <% }); %>
    </td>
    
  </tr>
</table>

<div>
  <a href="/events">View all events</a>
</div>
<div>
  <a href="<%=`/events/${event._id}/edit`%>">Edit</a>
</div>
<div>
  <a href="<%= `/events/${event._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you really gonna leave us?')">Delete</a>
</div>