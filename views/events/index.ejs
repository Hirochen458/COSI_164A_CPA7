<h2>Events Table</h2>
<a href="<%=`/events/new` %>"> <Button class="btn btn-primary mt-3 mb-3">Create Event</Button></a>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Location</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Online</th>
      <th>Registration Link</th>
      <th>Organizer</th>
     
    </tr>
  </thead>
  <tbody>
    <% events.forEach(event => { %>
    <tr>
      <td><a href="<%= `/events/${event._id}`%>"><%= event.title %></a></td>
      <td><%= event.description %></td>
      <td><%= event.location %></td>
      <td><%= event.startDate.toISOString().substring(0,10) %></td>
      <td><%= event.endDate.toISOString().substring(0,10) %></td>
      <td><%= event.isOnline %></td>
      <td><%= event.registrationLink %></td>
      <td><%= event.organizer.name %></td>
      <td>
        <a href="<%=`/events/${event._id}/edit` %>"> Edit </a>
      </td>
      <td>
        <a
          href="<%= `events/${event._id}/delete?_method=DELETE` %>"
          onclick="return confirm('Are you sure you want to delete this event?')"
          >Delete</a
        >
      </td>
      <td>
        <a href="<%=`/events/${event._id}/register?_method=POST` %>">Register</a>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>