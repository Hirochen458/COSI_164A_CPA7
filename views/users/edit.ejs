<div class="data-form">
    <form method="POST" action="<%=`/users/${user._id}/update?_method=PUT`%>">
      <h2>Edit user:</h2>
      <label for="Name">Name</label>
      <input type="text" name="name" id="Name" value="<%= user.name %>" placeholder="Name" autofocus required/>
    
      <label for="inputEmail">Email address</label>
      <input type="email" name="email" id="inputEmail" value="<%= user.email %>" placeholder="Email address" required/>
  
      <label for="inputPassword">Password</label>
      <input type="text" name="password" id="inputPassword" value="<%= user.password %>" placeholder="Password" required/>
      <br/>
      <label for="role">Role</label>
      <select id="role" name="role" value="<%= user.role %>">
        <option value="student">Student</option>
        <option value="alumni">Alumni</option>
      </select>
      <br/>
      <label for="graduationYear">Graduation Year</label>
      <input type="number" id="graduationYear" name="graduationYear" value="<%= user.graduationYear %>" required>
  
      <label for="major">Major:</label>
      <input type="text" id="major" name="major" value="<%= user.major %>"required>
      <br/>
      <label for="job">Job:</label>
      <input type="text" id="job" name="job" value="<%= user.job %>">
      
      <label for="company">Company:</label>
      <input type="text" id="company" name="company" value="<%= user.company %>">
      <br/>
      <label for="city">City:</label>
      <input type="text" id="city" name="city" value="<%= user.city %>">
      
      <label for="state">State:</label>
      <input type="text" id="state" name="state" value="<%= user.state %>">
    
      <label for="country">Country:</label>
      <input type="text" id="country" name="country" value="<%= user.country %>">
     
      <label for="zipCode">Zip Code</label>
      <input type="number" id="zipCode" name="zipCode" value="<%= user.zipCode %>" min="10000" max="99999">
      <br/>
      <label for="bio">Bio</label>
      <textarea id="bio" name="bio" ><%= user.bio %></textarea>
      <br/>
      <label for="interests">Interests</label>
      <input type="text" id="interests" name="interests" value="<%= user.interests %>">
      <br/>
      
      <button type="submit">Update</button>
    </form>
  </div>