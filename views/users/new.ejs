
<div class="data-form">
    <form action="/users/create" method="POST">
      <h2>Create a new user:</h2>
      <label for="Name">Name:</label>
      <input type="text" name="name" id="Name" placeholder="Name" autofocus required/>
    
      <label for="inputEmail">Email address:</label>
      <input type="email" name="email" id="inputEmail" placeholder="Email address" required/>
  
      <label for="inputPassword">Password:</label>
      <input type="password" name="password" id="inputPassword" placeholder="Password" required/>
      <br/>
      <label for="role">Role:</label>
      <select id="role" name="role">
        <option value="student">Student</option>
        <option value="alumni">Alumni</option>
      </select>
      <br/>
      <label for="graduationYear">Graduation Year:</label>
      <input type="number" id="graduationYear" name="graduationYear" value="2023" required>
  
      <label for="major">Major:</label>
      <input type="text" id="major" name="major" required>
      <br/>
      <label for="job">Job:</label>
      <input type="text" id="job" name="job">
      
      <label for="company">Company:</label>
      <input type="text" id="company" name="company">
      <br/>
      <label for="city">City:</label>
      <input type="text" id="city" name="city">
      
      <label for="state">State:</label>
      <input type="text" id="state" name="state">
    
      <label for="country">Country:</label>
      <input type="text" id="country" name="country">
     
      <label for="zipCode">Zip Code:</label>
      <input type="number" id="zipCode" name="zipCode" min="10000" max="99999">
      <br/>
      <label for="bio">Bio:</label>
      <textarea id="bio" name="bio"></textarea>
      <br/>
      <label for="interests">Interests:</label><br>
      <input type="text" id="interests" style="width: 200px;" name="interests" placeholder="delimit your interest by comma"><br>
      <button type="submit">Sign up</button>
    </form>
  </div>