<h2>Jobs Table</h2>
<a href="<%=`/jobs/new` %>"> <Button class="btn btn-primary mt-3 mb-3">Create Job</Button></a>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Company</th>
      <th>Location</th>
      <th>Salary</th>
      <th>PostDate</th>
      <th>DeadlineDate</th>
    </tr>
  </thead>
  <tbody>
    <% jobs.forEach(job => { %>
    <tr>
      <td><a href="<%= `/jobs/${job._id}`%>"><%= job.title %></a></td>
      <td><%= job.company %></td>
      <td><%= job.location %></td>
      <td><%= job.salary %></td>
      <td><%= job.postDate.toISOString().substring(0,10) %></td>
      <td><%= job.deadlineDate.toISOString().substring(0,10) %></td>
      <td>
        <a href="<%=`/jobs/${job._id}/edit` %>"> Edit </a>
      </td>
      <td>
        <a
          href="<%= `jobs/${job._id}/delete?_method=DELETE` %>"
          onclick="return confirm('Are you sure you want to delete this job?')"
          >Delete</a
        >
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>